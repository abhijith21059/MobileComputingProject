<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tab_icon"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:layout_centerVertical="true"
        android:src="@drawable/drugs" />

    <TextView
        android:id="@+id/medicine_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tab_icon"
        android:layout_margin="@dimen/four_dp"
        android:text="medicine name"
        android:textAppearance="?attr/textAppearanceListItem" />
    <TextView
        android:id="@+id/medicine_clocktime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tab_icon"
        android:layout_below="@id/medicine_name"

        android:text="medicine time"
        android:textAppearance="?attr/textAppearanceListItem" />
    <TextView
        android:id="@+id/medicine_dosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tab_icon"
        android:layout_below="@id/medicine_clocktime"

        android:text="medicine dosage"
        android:textAppearance="?attr/textAppearanceListItem" />
    <TextView
        android:id="@+id/medicine_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tab_icon"
        android:layout_below="@id/medicine_dosage"

        android:text="about medicine time/freq"
        android:textAppearance="?attr/textAppearanceListItem" />

</RelativeLayout>